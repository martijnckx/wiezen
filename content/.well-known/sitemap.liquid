---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
{%- assertIsNotEmpty site.host "Site host is needed for sitemap.xml" -%}
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in collections.all %}
        {% if page.url %}
        <url>
            <loc>https://{{- site.host -}}{{- page.url | url -}}</loc>
            <lastmod>{{- page.date | date: '%Y-%m-%dT%H:%M:%S.%3NZ' -}}</lastmod>
        </url>
        {% endif %}
    {% endfor %}
</urlset>