---
layout: layouts/base
---

<style>
    body,
    button {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    form {
        display: flex;
        flex-direction: column;
        max-width: 300px;
        gap: 20px;
    }

    input,
    textarea,
    .contact-feedback {
        padding: 10px;
        border: 1px solid lightgray;
        border-radius: 5px;
        font-family: inherit;
    }

    .contact-feedback {
        border: none;
    }

    button {
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: lightblue;
        cursor: pointer;
    }

    .contact-feedback {
        display: none;
        background: lightgreen;
        color: darkgreen;
        padding: 10px 20px;
    }

    .contact-feedback.error {
        background: lightcoral;
        color: darkred;
    }
</style>

<h1>Contact form example</h1>

<form action="/api/contact/" method="post">
    <div class="contact-feedback">Thank you for sending the contact message</div>
    <input type="text" name="name" placeholder="Name" required>
    <input type="email" name="email" placeholder="Email" required>
    <input type="tel" name="phone" placeholder="Phone">
    <textarea name="message" placeholder="Message" required></textarea>
    <div class="cf-turnstile" data-theme="light" data-sitekey="{{ site.turnstile_site_key }}"></div>
    <button type="submit">Send message</button>
</form>

<script>
    const params = new Proxy(new URLSearchParams(window.location.search), {
        get: (searchParams, prop) => searchParams.get(prop),
    });

    if (params.status) {
        if (params.status.toLowerCase() !== "success") {
            document.querySelector(".contact-feedback").classList.add("error");
            document.querySelector(".contact-feedback").innerText = "Something went wrong";
        }
        document.querySelector(".contact-feedback").style.display = "block";
    }
</script>